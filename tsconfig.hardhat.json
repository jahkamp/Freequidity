{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false,
    "types": ["mocha", "node"]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "hardhat.config.cjs",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "contracts/**/*.sol"
  ],
  "exclude": ["node_modules"]
}
